<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="real_estate_properties_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban,pivot,graph</field>
        <field name="context">{'search_default_state':'new','search_default_partner_id':1,'is_my_property':True}</field>
    </record>

    <record id="real_estate_type_action" model="ir.actions.act_window">
        <field name="name">Properties Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="real_estate_myproperty_action" model="ir.actions.act_window">
        <field name="name">My Properties</field>
        <field name="res_model">estate.myproperty</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_partner_id':1}</field>
    </record>

    <record id="real_estate_properties_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offer</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

   
<!-- Property offer action for show only accepted offers from kanban view button click -->
    <record id="estate_property_accepted_offer_action" model="ir.actions.act_window">
            <field name="name">estate.property.accepted.offer.action</field>
            <field name="res_model">estate.property.offer</field>
            <field name="domain">[('status','=','accepted')]</field>
            <field name="context">{'default_property_id':active_id}</field>
            <field name="view_mode">tree</field>
    </record>

       <menuitem id="menu_real_estate_root" name="Real Estate">
            <menuitem id="menu_real_estate_advertisements" name="Advertisements">
                <menuitem id="menu_real_estate_action" action="real_estate_properties_action"/>
                <menuitem id="menu_real_estate_myproperty" action="real_estate_myproperty_action"/>
                <menuitem id="menu_real_estate_property_offer" action="real_estate_properties_offer_action"/>
            </menuitem>
        </menuitem>    

    <menuitem id="menu_real_estate_property_type" name="Setting" parent="menu_real_estate_root"/>
    <menuitem id="menu_real_estate_property_type_action" parent="menu_real_estate_property_type" action="real_estate_type_action"/>    
    <!-- <menuitem id="menu_real_estate_property_tag_action" parent="menu_real_estate_property_type" action="real_estate_type_action"/>     -->
</odoo>