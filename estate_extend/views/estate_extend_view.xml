        <record id="lease_property_tree" model="ir.ui.view">
            <field name="name">Lease Property</field>
            <field name="model">lease.property</field>
            <field name="arch" type="xml">
                <tree>
                  <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="lease_property_form" model="ir.ui.view">
            <field name="name">Lease Property</field>
            <field name="model">lease.property</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="lease_duration" string="Lease Details">
                                <field name="lease_duration"/>
                                <field name="lease_rent_monthly"/>
                            </page>
                            <page name="estate_property_offer" string="Estate Property Offer">
                                <field name="property_offer_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
